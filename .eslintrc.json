{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "block-spacing": [
      "error",
      "always"
    ],
    "comma-spacing": [
      "error"
    ],
    "eqeqeq": [
      "error",
      "smart"
    ],
    "keyword-spacing": [
      "error"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "space-before-function-paren": [
      "error",
      "always"
    ],
    "valid-jsdoc": [
      "error"
    ]
  }
}
